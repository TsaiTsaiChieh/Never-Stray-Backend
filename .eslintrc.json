{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": [
          "Router",
          "Entity",
          "Index",
          "PrimaryGeneratedColumn",
          "Column",
          "CreateDateColumn",
          "UpdateDateColumn",
          "Controller",
          "Get",
          "Req",
          "Res",
          "Unique"
        ]
      }
    ],
    "@typescript-eslint/no-unused-vars": "error",
    "indent": [
      "off",
      2
    ],
    "eol-last": [
      "error",
      "always"
    ]
  }
}